<%- include ("partials/header.ejs")%>
<div class="ui main text container segment">
    <div class="ui huge header center">Blog post</div>
    <form class="ui form" action="/blogs" method="POST">

        <div class="field">
            <label>Title</label>
            <input type="text" name=newBlog[title] placeholder="Title..." class="">
        </div>

        <div class="field">
            <label >Image URL</label>
            <input type="text" name=newBlog[image] placeholder="URL..." class="">
        </div>

        <div class="field">
            <label>Description</label>
            <textarea type="text" name=newBlog[body] placeholder="Write your mind..." class=""></textarea>
        </div>

        <button class="ui inverted violet button">Submit</button>
    </form>
</div>
