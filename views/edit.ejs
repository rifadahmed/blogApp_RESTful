<%- include ("partials/header.ejs")%>
<div class="ui main text container segment">
    <div class="ui huge header center">Edit: <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">

        <div class="field">
            <label>Title</label>
            <input type="text" name=newBlog[title] value="<%=blog.title%>"" class="">
        </div>

        <div class="field">
            <label >Image URL</label>
            <input type="text" name=newBlog[image] value="<%=blog.image%>" class="">
        </div>

        <div class="field">
            <label>Description</label>
            <textarea type="text" name=newBlog[body]  class=""><%=blog.body%></textarea>
        </div>

        <button class="ui inverted violet button">Submit</button>
    </form>
</div>
<%- include ("partials/footer.ejs")%>